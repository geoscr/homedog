    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker",
            "type": "go",
            "request": "launch",
            "mode": "remote",
            "remotePath": "/app/src/homedog/Homedog",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${workspaceRoot}",
            "env": {},
            "args": []
        },
        {
            "name": "Local",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "remotePath": "",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${workspaceFolder}/platforms/Go/src/homedog/Homedog",
            "cwd": "${workspaceFolder}/platforms/Go",
            "env": {},
            "args": [ "-debug-events" ],
            "showLog": true
        },
        {
            "name": "Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "remotePath": "",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${workspaceFolder}/platforms/Go/src/homedog/Homedog",
            "env": {
                "GOPATH": "${workspaceFolder}/platforms/Go"
            },
            "args": [],
            "showLog": false
        },        
    ]
}
